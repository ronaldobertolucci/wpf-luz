<Window x:Class="wpf_luz.CreateDeckDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_luz"
        mc:Ignorable="d"
        Title="CreateDeckDialog" Height="400" Width="300">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,137,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="220"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Description}" VerticalAlignment="Top" Width="220" Height="93" Margin="0,190,0,0"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="40,111,0,0" VerticalAlignment="Top"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="42,164,0,0" VerticalAlignment="Top"/>
        <Label Content="New Deck" HorizontalAlignment="Center" Margin="0,51,0,0" VerticalAlignment="Top" Width="220" HorizontalContentAlignment="Center" FontSize="22"/>
        <Button Content="Save" HorizontalAlignment="Center" Margin="0,305,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.379,-0.646" Click="Bnt_Save" IsDefault="True"/>

    </Grid>
</Window>
